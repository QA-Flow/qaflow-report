{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "*.ts"
  ],
  "exclude": [
    "node_modules", 
    "**/*.test.ts",
    "babel.config.js",
    "eslint.config.mjs",
    "__tests__"
  ]
} 